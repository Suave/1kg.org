<% @page_title = @title = "上传照片" -%>
<%= "　到#{link_to @photo.photoable.name ,@photo.photoable}" if @photo.photoable %>

<% content_for :sidebar do -%>
<% end -%>

<br/>
<div class="newbox">
  <div class="contents">
    <% form_for @photo,:html => {:multipart => true} do |f| -%>
    <p><label class="label">上传照片</label><%= f.file_field :image %></p>
      <span style="margin-left:80px;color:#666">建议图片宽度不要大于580像素，文件大小不超过500kb。</span>
    <p><label class="label">照片标题</label><%= f.text_field :title, :size => 40, :class => "formText" %></p>
    <p><label class="label">照片描述(可选)</label><%= f.text_area :description, :cols => 40, :rows => 4 %></p>
    <%= f.hidden_field :photoable_type,:value => @photo.photoable_type %>
    <%= f.hidden_field :photoable_id,:value => @photo.photoable_id %>
    <p class="submit clearfix" style="margin-left:320px"><span class="btnWrap"><%= submit_tag "上 传" %></span></p>
  <% end -%>
  </div>
</div>
