<% @page_title = "#{@school.title} #{@requirement.requirement_type.title} 项目" -%>

<% content_for :sidebar do -%>
  <div class="cleanfix" style="clear:both;height:20px"></div> 
  <span class="remark"><%= link_to "&raquo; 回到#{@school.title}",school_url(@school)%></span><br/>
  <span class="remark"><%= link_to "&raquo; 回到#{@school.title}",school_url(@school)%></span>
<% end %>

<h1><%= @page_title %></h1>

<div class="newbox">
  <div  style="float:left">
    <span class="span_title">项目介绍</span>
    <div class="cleanfix"></div>
    <%= @requirement.requirement_type.description_html %>
  </div>
</div>

<div class="cleanfix" style="clear:both;height:3px"></div>

<div class="newbox">
  <span class="span_title">申请原因</span>
  <div class="cleanfix" style="height:3px"></div>
  <%= @requirement.apply_reason %>
</div>

<div class="newbox">
  <span class="span_title">执行计划</span>
  <div class="cleanfix" style="height:3px"></div>
  <%= @requirement.apply_plan %>
</div>

<div class="cleanfix" style="clear:both;height:3px"></div>

<div class="newbox">
  <span class="span_title">执行报告</span>
  <div class="cleanfix" style="height:3px"></div>
  <%= @requirement.feedback %>
  <% if logged_in? && @requirement.applicator == current_user -%>
  <div id="admins">你是项目申请者，可以更新此项目的执行报告：<br/>
    <%= link_to "更新报告", edit_school_requirement_url(@school, @requirement) ,:class => "adminbutton"%>
  </div>
  <% end -%>
</div>