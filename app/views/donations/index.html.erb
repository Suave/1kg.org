<% content_for :heads do -%>
<style type="text/css">
  .goods_list{margin-right:30px}
  .school_list_photo img{height:68px;}
  .school_list_photo{width:92px}
  .school_meta{width:170px}
  #misc {padding:4em 0;width:960px;clear:both;text-align:center;font-size:13px;line-height:26px;}
  #misc img {margin:0 4px;}
  #misc span {position:relative;top:-20px;}
  #partners {float:right;width:290px}
  #partners img{border:1px #ddd solid}
  #donationg {background-color:#fdf2d5;padding:0 8px;margin:16px 0 4px;border:1px #f4d5b9 solid}

