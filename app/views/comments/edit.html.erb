<% @page_title = "编辑留言" -%>

<div class="box">
  <div class="boxOuter">
    <div class="boxInner">
      <h3>编辑留言</h3>
      <div class="contents">
        <% form_for :comment, :url => comment_path(@comment), :html => {:method => :put} do |f| -%>
          <p><%= fckeditor_textarea("comment", "body", :toolbarSet => 'OneLine', :height => '400px') %></p>
          <p class="submit"><%= submit_tag "写好了, 保存" %></p>
        <% end -%>
      </div>
    </div>
  </div>
</div>