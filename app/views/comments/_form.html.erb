<div class="newbox" id="topicCommentForm">
  <% if logged_in? -%>
    <% form_for :comment, :url => comments_path(commentable) do |f| -%>
    <p><%= f.text_area :body, :cols => 54, :rows => 6 %></p>
    <p class="submit"><%= submit_tag "回 复" %></p>
    <% end -%>
  <% else -%>
    <div class="contents"><%= link_to "登录", login_url(:to => CGI.escape(request.request_uri)) %>以后可以留言</div>
  <% end -%>
</div>