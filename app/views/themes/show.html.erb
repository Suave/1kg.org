<% @page_title = @title = "#{@theme.title}" -%>



<% content_for :sidebar do -%>
<div class="box">
  <div class="boxOuter">
    <div class="boxInner">
      <h3>小黑板</h3>
      <div class="contents">
        <%= @theme.description_html %>
      </div>
    </div>
  </div>
</div>

<div class="box">
  <div class="boxOuter">
    <div class="boxInner">
      <h3>版主</h3>
      <%= render :partial => "/public/user_list", :locals => {:users => @theme.managers} %>
    </div>
  </div>
</div>

<% end -%>

<div class="posting">
  <div class="box">
    <div class="boxOuter">
      <div class="boxInner">
        <h3>所有话题</h3>
        <span class="postNew">++ <%= link_to "写新帖子", new_topic_url(:boardable_type => 'Theme',:boardable_id => @theme.id) %></span>
        <div class="contents">
        <%= render :partial => "/topics/topics", :locals => {:topics => @topics} %>
        <%= customize_paginate @topics %>
        
        </div>
      </div>
    </div>
  </div>
  
</div>

