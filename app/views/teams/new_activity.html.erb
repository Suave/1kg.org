<% @page_title = "发布团队活动" -%>

<% content_for :crumb do -%>
<li>发布团队活动</li>
<% end -%>

<% content_for :sidebar do -%>
<% @page = Page.find_by_slug('activity-guide') -%>
  <%if @page%>
  <div class="newbox">
    <h3>活动编辑指南</h3>
      <div class="clearfix" style="margin-bottom:10px"></div>
     <%= render :text => @page.body %>
  </div>
  <%end%>
<% end -%>


  <div class="newbox" id="activitiesPostNew">
       <h3>发布团队活动</h3>
        <div class="clearfix" style="height:20px"></div>
        <% form_for :activity, :url => create_activity_team_url(@team) do |f| -%>
        <%= render :partial => "/activities/form", :object => f %>  
        <p class="submit clearfix"><span class="btnWrap"><%= submit_tag "发 布" %></span>
        <span><%= link_to "取 消 ", team_url(@team),:style => "width:100px"%></span> 带<span class="require">*</span>号的是必填项
        </p>
        <% end -%>
  </div>
