<% @page_title = "编辑 Buck" -%>

<% content_for :sidebar do -%>
  <h4>> <%= link_to "返回管理首页", admin_url %></h4>
  <%= render :partial => "/admin/shared/operation_list" %>
<% end -%>

<div class="box">
  <div class="boxOuter">
    <div class="boxInner">
      <h2>编辑 <%= h @type.title %> 的一个 Buck</h2>
      <div class="contents">
        <% form_for :buck, :url => admin_stuff_type_buck_url(@type, @buck), :html => {:method => :put} do |f| -%>
        <%= render :partial => "form", :object => f %>
        <p><label>&nbsp;</label><%= submit_tag "创建" %> 或 <%= link_to "返回", admin_stuff_type_bucks_url(@type) %></p>
        <% end -%>
      </div>
    </div>
  </div>
</div>