<% @page_title = "编辑需求" -%>

<% content_for :sidebar do -%>

  <%= render :partial => "/admin/shared/operation_list" %>
<% end -%>

<div class="box">
  <div class="boxOuter">
    <div class="boxInner">
      <h2>编辑 <%= h @type.title %> 需求</h2>
      <div class="contents">
        <% form_for :requirement, :url => admin_requirement_type_requirement_url(@type, @requirement), :html => {:method => :put} do |f| -%>
        <%= render :partial => "form", :object => f %>
        <p><label>&nbsp;</label><%= submit_tag "创建" %> 或 <%= link_to "返回", admin_requirement_type_requirements_url(@type) %></p>
        <% end -%>
      </div>
    </div>
  </div>
</div>