<% @page_title = "所有#{@type.title}需求" -%>

<% content_for :sidebar do -%>
  <h4>> <%= link_to "返回管理首页", admin_url %></h4>
  <%= render :partial => "/admin/shared/operation_list" %>
<% end -%>

<div class="box">
  <div class="boxOuter">
    <div class="boxInner">
      <h2>所有<%= h @type.title %>需求</h2>
      <p class="postNew">++ <%= link_to "创建一个新需求", new_admin_requirement_type_requirement_url %></p>
      <div class="contents">
        <table>
          <tr>
            <th>学校</th>
            <th>需求数量</th>
            <th>已配对</th>
            <th>隐藏</th>
            <th>状态</th>
            <th>Actions</th>
          </tr>
          <% @requirements.each do |b| -%>
          <tr>
            <td>
              <%= link_to b.school.title, school_url(b.school), :target => "_blank" %>
              <%= "<br />#{b.for_team_tip}" if b.for_team? %>
            </td>
            <td><%= h b.quantity %></td>
            <td><%= h b.matched_count %></td>
            <td><%= h b.donations.count %></td>
            <td><%= b.hidden? ? "是" : "" %></td>
            <td><%= h b.status %></td>
            <td>
              <%= link_to "detail", admin_requirement_type_requirement_url(@type, b) %> |
              <%= link_to "edit", edit_admin_requirement_type_requirement_url(@type, b) %> |
              <%= link_to "delete", admin_requirement_type_requirement_url(@type, b), :method => :delete, :confirm => "相关的捐赠会一同删掉, 且不能恢复, 确定删除?" %>
            </td>
          </tr>
          <% end -%>
        </table>
      </div>
    </div>
  </div>
</div>