<% @page_title = "#{@type.title} 的 #{@requirement.school.title} Buck" -%>

<% content_for :sidebar do -%>
  <h4>> <%= link_to "返回管理首页", admin_url %></h4>
  <%= render :partial => "/admin/shared/operation_list" %>
<% end -%>

<div class="box">
  <div class="boxOuter">
    <div class="boxInner">
      <h2><%= h @requirement.school.title %>的<%= h @type.title %>需求</h2>
      <div class="contents">
        <p>总共 <%= @stuffs.size %> 个, <%= link_to "下载密码CSV文件", formatted_admin_requirement_type_requirement_url(@type, @requirement, :format => :csv ) %>, <%= link_to "返回", admin_requirement_type_requirements_url(@type) %></p>
        <table>
          <tr>
            <th>password</th>
            <th>用户</th>
            <th>学校</th>
            <th>配对时间</th>
          </tr>
          <% @stuffs.each do |b| -%>
          <tr>
            <td><%= b.code %></td>
            <td><%= link_to b.user.login, user_url(b.user) if b.user %></td>
            <td><%= link_to b.school.title, school_url(b.school) if b.school %></td>
            <td><%= b.matched_at.to_date if b.matched_at %></td>
          </tr>
          <% end -%>
        </table>
      </div>
    </div>
  </div>
</div>