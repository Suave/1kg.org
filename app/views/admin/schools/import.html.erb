<% content_for :fullsize do %>
<div class="box">
  <div class="boxOuter">
    <div class="boxInner">
      <% if @title %>
        <h3><%= @title %></h3>
        <% if @school %>
          <div id="form">
            <%= render :partial => 'import_form', :locals => {:school => @school} %>
          </div>
        <% else %>
          <p>对不起，学校不存在</p>
        <% end %>
      <% else %>
        <h3>所有博客学校</h3>
        <% @schools.each do |school| %>
        <p>
          <%= link_to school.title, import_admin_schools_path(:title => school.title) %>
          <%= '此学校已提交' if School.find_by_title(school.title)  %>
        </p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<% end %>

