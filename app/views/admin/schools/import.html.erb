<% content_for :fullsize do %>
<div class="box">
  <div class="boxOuter">
    <div class="boxInner">
      <h3>所有博客学校</h3>
      <% show_form = true %>
      <% @schools.each_with_index do |school, i| %>
        <p>
          <%= link_to_function school.title, "$('#form#{i}').toggle();" %>
          <%= '此学校已提交' if School.find_by_title(school.title)  %>
        </p>
        <% if School.find_by_title(school.title).nil? && show_form %>
        <div id="form<%= i %>" style="display:none;">
          <%= render :partial => 'import_form', :locals => {:school => school} %>
        </div>
        <% show_form = false %>
        <% end %>
      <% end %>
</div></div></div>
<% end %>