<% @page_title = "添加商品 - 商城管理" -%>

<% content_for :sidebar do -%>
  <h4>> <%= link_to "返回管理首页", admin_url %></h4>
  <%= render :partial => "/admin/shared/operation_list" %>
<% end -%>

<div class="box">
  <div class="boxOuter">
    <div class="boxInner">
      <h3>添加商品</h3>
      <span class="postNew">++ <%= link_to "添加新商品", new_admin_good_url %></span>
      <div class="contents">
        <table border="0" cellspacing="5" cellpadding="5">
          <tr>
            <th>名字</th>
            <th>单价</th>
            <th>操作</th>
          </tr>
          <tr>
            <% @goods.each do |g| %>
            <td><%= g.title %></td>
            <td><%= g.price %></td>
            <td>
              <%= link_to "查看产品照片", admin_good_photos_url(g) %> | 
              <%= link_to "编辑", edit_admin_good_url(g) %>
            </td>
            <% end %>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>