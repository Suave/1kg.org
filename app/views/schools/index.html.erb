<% @page_title = @title = "学校" -%>

<% content_for :heads do -%>
  <%= javascript_include_tag 'jQuery/jquery.ui.core.min' %>
  <%= javascript_include_tag 'jQuery/jquery.ui.tabs.min' %>
  <%= javascript_include_tag 'jquery.prettyPhoto' %>
  <%= stylesheet_link_tag 'prettyPhoto' %>
<% end %>
<script type="text/javascript" charset="utf-8">
  jQuery(document).ready(function(){
    jQuery("a[rel^='prettyPhoto']").prettyPhoto();
  });
</script>
<% content_for :crumb do -%>
<li>学校</li>
<% end -%>

<% content_for :sidebar do -%>


<%= render :partial => "/shared/ad" %>

<div class="box">
  <div class="boxOuter">
    <div class="boxInner">
      <h3>和学校相关的活动</h3>
      <span class="postNew"><%= link_for_new_activity %></span>
      <div class="contents">
        
          <% @activities_for_school.each do |a| -%>
          <div style="padding:4px 0;">
          <p style="font-size:12px;font-weight:bold " ><%= link_to a.title, activity_url(a) %></p>
          <span class="gary_span">时间 <%= a.start_at.to_date %> 至 <%= a.start_at.to_date %></span><br/>
         
          <span class="gary_span">相关学校: <%= link_to a.school.title,school_url(a.school) %> </span>
          </div>
          <% end -%>
        
      </div>
    </div>
  </div>
</div>


<%= render :partial => 'need_tag_cloud', :locals => {:tags => @tags} %>

<%= render :partial => "submit" %>

<% end -%>

