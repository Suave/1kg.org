<div class="box" id="search-front">
  <div class="boxOuter">
    <div class="boxInner">
      <h3>学校需求</h3>
      <div class="contents">
        <% form_tag '/tags', :method => 'get' do %>
          <input type="text" name="tag" size="25" class="form-text" value="搜索标签" onclick="jQuery(this).val('');return false;" />
          <input type="submit" name="sa" value="搜索" class="form-submit" />
        <% end %>
        <br />
        <% tag_cloud tags, %w(tag1 tag2 tag3 tag4) do |tag, css_class| %>
          <%= link_to tag.name, tag_path(:tag => tag.name), :class => css_class %>
        <% end %>
      </div>
      <p class="remark">&raquo; <%= link_to "所有需求", '/tags/needs' %></p>
    </div>
  </div>
</div>