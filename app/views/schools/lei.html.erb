<% content_for :heads do -%>
  <%= javascript_include_tag 'jquery.prettyPhoto' %>
  <%= stylesheet_link_tag 'prettyPhoto' %>
  <%= stylesheet_link_tag 'lei' %>
  <%= javascript_include_tag 'jQuery/jquery.ui.core.min' %>
  <%= javascript_include_tag 'jQuery/jquery.ui.tabs.min' %>
<% end %>

<% @page_title = "#{h @school.title}" -%>
<% @body_class = "schools" -%>

<script type="text/javascript" charset="utf-8">
  function more(box){$(box).animate({ height: 'show' },'fast'); };
  jQuery(document).ready(function(){
    jQuery("a[rel^='prettyPhoto']").prettyPhoto();
  });
   
</script>



<% content_for :subtitle do -%>  
<% end -%>

  <div id="meta">
    <div class="meta_left">
      <% if @school.main_photo -%>
      <%= link_to image_tag(@school.main_photo.public_filename(:small), :alt => @school.main_photo.title), @school.main_photo.public_filename(:medium), 
          :rel => "prettyPhoto[gallery]",:class => "school_main" %>
      <%else%>
      <img class="school_main" src="/images/school_main.png"/>
      <%end%>
      <a href="<%= photos_school_path(@school)-%>">全部<%=@school.photos.length-%>张照片</a>
            　<a style="float:right" href="<%=new_photo_url(:school => @school.id)-%>">上传照片</a>
      <% if false -%>
      <%= link_to image_tag(photo.public_filename(:thumb), :alt => photo.title), photo.public_filename(:medium), 
        :rel => "prettyPhoto[gallery]", :description => photo_meta(photo, current_user), :title => photo.title,:class => "photo_small" %>
      <%end%>
    </div>
    <div class="meta_right">
      <%= render :partial => "status" %>
      <h1><%= h @school.title -%></h1>
      <% unless @basic.has_internet==0 %><img src="/images/icon/online.png" title="这个学校可以上网"><% end %>
      <div class="meta_info">
        <h5 style="font-size:14px;">活跃度 <!--<%= @school.karma %>--></h5><%= karma_star(@school.karma)-%>
        <p>地址　<% if @school.geo.parent %><%= link_to @school.geo.parent.name.to_s,'/geos/'+@school.geo.parent.id.to_s %> > <% end %><%= link_to @school.geo.name.to_s,'/geos/'+@school.geo.id.to_s %> <%= h @basic.address %></p>
        <% unless @basic.zipcode.blank? %><p>邮编　<%= h @basic.zipcode %></p><%end-%>
        
      </div>
    </div>
  </div>
  
  <div class="school_box" id="morecontact">
    <a class="more" style="float:right">查看学校联系方式</a>
    <p class="label_lei">学校情况</p>
    <% unless @basic.master.blank? %><p class="content_lei">学校的校长是 <%= h @basic.master %><% unless @basic.telephone.blank? %>，学校电话是<%= h @basic.telephone %><%end-%>。</p><%end-%>
    <% unless @contact.name.blank? %><p class="content_lei">学校的联系人是 <%= h @contact.name %><% unless @contact.role.blank? %>(<%= h @contact.role %>)<%end-%>
    <% unless @contact.telephone.blank? %>　　电话 <%= h @contact.telephone %>　<%end-%>
    <% unless @contact.email.blank? %>　　邮箱 <%= h @contact.email %>　<%end-%>
    <% unless @contact.qq.blank? %>　　QQ <%= h @contact.qq %>　<%end-%>
    </p><%end-%>
  </div>
    
  <div class="school_box">
    <p class="label_lei">学校情况</p>
  <%if @need-%>
    <% unless  @need.urgency.blank? -%>
    <p  class="content_lei">这个学校非常需要 <span class="important"><%= link_to_needs @need.urgency %><span></p><% end -%>
    <p class="content_lei">这个学校<%="还" unless @need.urgency.blank?%>需要
    <%= link_to_needs @need.book %>
    <%= link_to_needs @need.stationary %>
    <%= link_to_needs @need.sport %>
    <%= link_to_needs @need.cloth %>
    <%= link_to_needs @need.accessory %>
    <%= link_to_needs @need.course %>
    <%= link_to_needs @need.teacher %>
    <%= link_to_needs @need.other %> ...
    </p>
    
  <%end%>
  <p  class="content_lei">学校<%= radio_value @basic.has_library %><%= "#{@basic.book_amount}本" if ! @basic.book_amount == 0 %>图书，<%= radio_value @basic.has_pc %><%= "#{@basic.pc_amount}台" if ! @basic.pc_amount == 0 %>电脑，<%= '不' if @basic.has_internet == 0 %>可以上网。</p>
  <p class="content_lei">学校有<%unless @basic.level_amount.blank?%><%= h @basic.level_amount %>个年级，<%end-%>
  <%unless @basic.class_amount.blank?%><%= h @basic.class_amount %>个班，<%end-%>
  <%unless @basic.student_amount.blank?%><%= h @basic.student_amount %>名学生，<%end-%>
  <%unless @basic.teacher_amount.blank?%><%= h @basic.teacher_amount %>名老师。<%end-%></p>
</div>

  <div class="box">
    <div class="boxOuter">
      <div class="boxInner">
        <h3>学校信息<span style="position:relative;text-align:right;margin-left:10px;font-size:12px;font-weight:normal;color:#666" ><%= @school.created_at.to_date %>由<%= link_to @school.user.login, user_url(@school.user) %>提交, <%= validate_for_human @school %></span></h3>
        <div class="tabbedPanel" id="tabs">
          <%= render :partial => "show_tabmenu" %>
          <div class="panel setting">
            <div id='basic'>
              <form>
              <% if @basic -%>
              
              <p><label>地　　址</label><%= h @basic.address %>　　邮编： <% unless @basic.zipcode.blank? %><%= h @basic.zipcode %><%else%><span class="unknow">未知</span><%end-%> </p>
              
              <p><label>校　　长</label><% unless @basic.master.blank? %><%= h @basic.master %><%else%><span class="unknow">未知</span><%end-%>　　 电话：
              <% unless @basic.telephone.blank? %><%= h @basic.telephone %></p><%else%><span class="unknow">未知</span><%end-%>
              <% if @contact -%>
                <p><label>联&nbsp;&nbsp;系&nbsp;&nbsp;人</label><% unless @contact.name.blank? %><%= h @contact.name %><%else%><span class="unknow">未知</span><%end-%>
                                　　职务： <% unless @contact.role.blank? %><%= h @contact.role %><%else%><span class="unknow">未知</span><%end-%></p>
                <p><label>联系方式</label>
                <% unless @contact.telephone.blank? %>电话： <%= h @contact.telephone %>　<%end-%>
                <% unless @contact.email.blank? %>邮箱：<%= h @contact.email %>　<%end-%>
                <% unless @contact.qq.blank? %>QQ：<%= h @contact.qq %>　<%end-%>　</p>
              <% else -%>
                <p class="incomplete">没有联系人信息</p>
              <% end -%>
              <p><label>学校规模</label>年制：<%unless @basic.level_amount.blank?%><%= h @basic.level_amount %><%else%><span class="unknow">未知</span><%end-%>
              　　班级：<%unless @basic.class_amount.blank?%><%= h @basic.class_amount %><%end-%>
              　　学生：<%unless @basic.student_amount.blank?%><%= h @basic.student_amount %><%end-%>
              　　老师：<%unless @basic.teacher_amount.blank?%><%= h @basic.teacher_amount %><%end-%></p>
              <p><label>学校资源</label>图书：<%= radio_value @basic.has_library %> <%= "#{@basic.book_amount}本书，" if ! @basic.book_amount.blank? %>
                                                                             　　电脑：<%= radio_value @basic.has_pc %> <%= "#{@basic.pc_amount}台电脑" if ! @basic.pc_amount.blank? %>，上网 <%= radio_value @basic.has_internet %></p>  
              <% else -%>
              <p class="incomplete">没有学校基本信息</p>
              <% end -%>
              
              <% if @local.ngo_support == 0 -%>
              <p><label>公益团队</label>没有</p>
              <% elsif @local.ngo_support == 2 -%>
              <p><label>公益团队</label>未知</p>
              <% elsif @local.ngo_support == 1 -%>
              <p><label>公益团队</label><%= h @local.ngo_name %> 　　公益项目：
              <%unless @local.ngo_projects.blank?%><%= h @local.ngo_projects %><%else%><span class="unknow">未知</span><%end-%></p>
              <% end -%>

              </form>
            </div>

            <div id="guides">
              <form>
              <% if @school.county -%>
                <p><label>学校在</label><%= @school.county.name %></p>
              <% end -%>
              <% if @traffic -%>
                <p><label>周边景点</label><%= h @traffic.sight %>　</p>
                <p><label>交通指南</label>
                  <%=@traffic.description_html %>
                </p>
                <p>&nbsp;</p>
              <% else -%>
                <p class="incomplete">没有交通信息</p>
              <% end -%>
              </form>
            </div>

            <div id="need">
              <form>
              <% if @need -%>
              <% unless  @need.urgency.blank? -%><p><label>紧急需求:</label><%= h @need.urgency %></p><% end -%>
              <% unless  @need.book.blank? -%><p><label>图书:</label><%= h @need.book %></p><% end -%>
              <% unless  @need.stationary.blank? -%><p><label>文具:</label><%= h @need.stationary %></p><% end -%>
              <% unless  @need.sport.blank? -%><p><label>文体用品:</label><%= h @need.sport %></p><% end -%>
              <% unless  @need.cloth.blank? -%><p><label>衣物:</label><%= h @need.cloth %></p><% end -%>
              <% unless  @need.accessory.blank? -%><p><label>教具:</label><%= h @need.accessory %></p><% end -%>
              <% unless  @need.course.blank? -%><p><label>课程:</label><%= h @need.course %></p><% end -%>
              <% unless  @need.teacher.blank? -%><p><label>支教老师:</label><%= h @need.teacher %></p><% end -%>
              <% unless  @need.other.blank? -%><p><label>其它需求:</label><%= h @need.other %></p><% end -%>
              <% else -%>
              <p class="incomplete">没有学校需求信息</p>
              <% end -%>
              </form>
            </div>

<!--
            <div id="local">
              <form>
              <% if @local -%>
              
                <p><label>当地收入来源</label><%= h @local.incoming_from %></p>
                <p><label>当地平均收入</label><%= h @local.incoming_average %> 元/年</p>

                <% if @local.ngo_support == 0 -%>
                <p><label>公益组织支持</label>没有</p>
                <% elsif @local.ngo_support == 2 -%>
                <p><label>公益组织支持</label>未知</p>
                <% elsif @local.ngo_support == 1 -%>
                <p><label>公益组织支持</label><%= h @local.ngo_name %></p>
                <p><label>开始时间</label><%= h @local.ngo_start_at.to_date if @local.ngo_start_at %></p>
                <p><label>联系人</label><%= h @local.ngo_contact %> <%= h @local.ngo_contact_via %></p>
                <% end -%>
              <% else -%>
                <p class="incomplete">没有当地信息</p>
              <% end -%>
              </form>
            </div>
-->

            <div id="contact">
              <div style="clear:both"></div>
              <form>
              <% if @finder -%>
                <p><label>姓　　名</label><%= h @finder.name %>　</p>
                <% if logged_in? && current_user.admin? %>
                <p><label>邮　　件</label><%= h @finder.email %>　</p>
                <p><label>联系电话</label><%= h @finder.phone_number %>　</p>
                <% end %>
                <p><label>QQ/MSN</label><%= h @finder.qq %>/<%= h @finder.msn %>　</p>
                <p><label>收集时间</label><%= h @finder.survey_at.to_date if @finder.survey_at %>　</p>
                <p style="clear:both"><label> 活动建议</label><%= h @finder.note %>　</p>
              <% else -%>

                <p class="incomplete">没有收集人信息</p>

              <% end -%>
              </form>
            </div>
          </div>
        </div>
        <p class="remark">
          &raquo;
          <% if logged_in? && current_user.school_moderator? -%>
            <% if @school.validated? -%>
              <%= link_to "取消验证", validate_school_url(@school, :t => 'remove'), :method => :put %>
            <% else -%>
              <%= link_to "通过验证", validate_school_url(@school, :t => 'add'), :method => :put %>
            <% end -%>| 
          <% end -%>
          
          <% if logged_in? && @school.edited_by(current_user) -%>
            <%= link_to "编辑", edit_school_url(@school) %>
          <% end -%>

          <% if logged_in? && @school.destroyed_by(current_user) -%>
            | <%= link_to "删除", school_url(@school), :confirm => "确定删除这所学校?", :method => :delete %>
          <% end -%>
        </p>
      </div>
    </div>
  </div>

  <script type="text/javascript">
    jQuery("#tabs").tabs();
  </script>
  
  <% if false %>
  <div class="box">
    <div class="boxOuter">
      <div class="boxInner">
        <h3>学校活跃度</h3>
        <div class="contents clearfix">
          <% render_chart_html '/swfs/FCF_Column3D.swf', '', @school.karma_chart,
              'myNextHTML', 600, 300, false do-%>
          <% end -%>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  
  <div class="box">
    <div class="boxOuter">
      <div class="boxInner">
        <h3>路线攻略</h3>
        <div class="contents clearfix">
          <%= render :partial => 'guides', :object => @school.guides %>
        </div>
        <p class="remark">&raquo; <%= link_to '提交攻略', new_school_guide_path(@school) %></p>
      </div>
    </div>
  </div>
  
  <div class="box">
    <div class="boxOuter">
      <div class="boxInner" style="display:none">
        <h3>学校照片</h3>
        <span class="postNew"><%= link_to image_tag("upload_photo.png"), new_photo_url(:school => @school.id) %></span>
        <div class="contents clearfix">
          <%= render :partial => "gallery_photo", :collection => @photos %>
        </div>
        <p class="remark">&raquo; <%= link_to "全部图片", photos_school_path(@school) %></p>
      </div>
    </div>
  </div>

  <div class="box">
    <div class="boxOuter">
      <div class="boxInner">
        <h3>用户分享</h3>
        <span class="postNew"><%= link_to image_tag("submit_share.png"), new_share_url %></span>
        <div class="contents">
          <% @shares.each do |s| -%>
          <div style="clear:both;margin-bottom:1em;min-height:50px">
            <div style="float:left">
              <%= avatar_for(s.user, "large") %>
            </div>
            <div style="margin-left:60px;">
              <div><%= link_to s.user.login, user_url(s.user) %> 写了 <%= link_to h(s.title), share_url(s) %></div>
              <div style="color:#999; text-align:right">
                <%= s.hits %> 浏览/<%= s.comments_count %> 回复
              </div>
            </div>
          </div>
          <% end -%>
        </div>
      </div>
    </div>
  </div>

  <%= render :partial => "/topics/latest_topics", :locals => {:title => "学校话题", :board => @board, :topics => @topics} %>
  
  
<% content_for :sidebar do -%>
    
  <div class="school_sidebar">
    <p class="label_lei">地理位置</p>
    <%= render :partial => 'map_lei', :locals => {:school => @school} %>
    <div class="clear"></div>
  </div>
  
  <div class="school_sidebar" style:"padding:0 10px">
    <% unless @traffic.description_html.blank? %><a onclick="more('#moretraffic')" class="more" style="float:right;">查看学校交通指南</a><%end%>
    <div id="moretraffic" style="display:none">
      <p class="label_lei">交通指南</p>
      <div class="content_lei" style="margin-top:5px">
      <%=@traffic.description_html %>
      </div>
    </div>
    <div class="clear"></div>
  </div>
  
  <div class="school_sidebar" id="cityLatestMembers">
      <p class="label_lei">学校大使</p>
        <% if @school.validated? -%>
          <%= render :partial => "/shared/user_list", :locals => {:users => @moderators} %>
        <% else -%>
          <div class="contents">
            <p>学校通过验证后才有学校大使</p>
          </div>
        <% end -%>
        <p class="remark">
          <%= link_to "我添加新大使了么？", moderator_school_url(@school) if @school.has_moderator?(current_user) %>
        </p>
  </div>

  <div class="box" id="cityLatestMembers">
    <div class="boxOuter">
      <div class="boxInner">
        <h3>去过的用户</h3>
        <%= render :partial => "/shared/user_list", :locals => {:users => @visitors} %>
      </div>
    </div>
  </div>
  
  <div class="box" id="cityLatestMembers">
    <div class="boxOuter">
      <div class="boxInner">
        <h3>关注的用户</h3>
        <%= render :partial => "/shared/user_list", :locals => {:users => @followers} %>
      </div>
    </div>
  </div>
  
  <p>&raquo; <%= link_to "前往#{@school.geo.name}", geo_url(@school.geo) %></p>
  
<% end -%>