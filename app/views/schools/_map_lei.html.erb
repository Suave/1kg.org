<% content_for :tail do -%>
  <script src="http://ditu.google.cn/maps?file=api&amp;v=2&amp;key=ABQIAAAAJod3rJ1UD4NbyqMUYncq8hSJzhnW5idwQnMkpN3KtraAW36MXhQfv15HR27S30pNBsaozzpDAHB-QA" type="text/javascript"></script>

  <script type="text/javascript">
    var map;
    function initialize() {
      if (GBrowserIsCompatible()) {
        map = new GMap2(document.getElementById("map_div"));
        map.setCenter(new GLatLng(<%= school.basic.latitude.to_f %>, <%= school.basic.longitude.to_f%>), 7);
        var point = new GLatLng(<%= school.basic.latitude.to_f %>, <%= school.basic.longitude.to_f %>);
        marker = new GMarker(point);
        map.addOverlay(marker);
      }
    }
    jQuery(document).ready(function(){initialize();});
  </script>
<% end %>

<div id="map_div" title="点击在大地图中查看" style="background-color:#ddd;border:1px #ccc solid;width: 268px; height: 178px; margin:10px 0;cursor:pointer" onclick="$('#school_large_map').click();"></div>

<div id="map_info">
  <p class="remark" style="text-align:right">
    <%= link_to "在大地图中查看", large_map_school_url(:iframe => true, :width => 550, :height => 480, :alt => @school.title), :rel => 'prettyPhoto[iframes]', :description => nil ,:id => 'school_large_map' ,:style => "display:none;"%>
  </p>
</div>