<!--关注 要去 去过-->
      <div style="float:right">
      <% if @school.visited?(current_user) == 'interesting' -%>
      <%= link_to "关注", novisited_school_url(@school), :method => :put,:class => "buttonstatus2"%>
      <%else%>
      <%= link_to "关注", interest_school_url(@school), :method => :put,:class => "buttonstatus" %>
      <%end%>
      
      <% if @school.visited?(current_user) == 'wanna' -%>
      <%= link_to "要去", novisited_school_url(@school), :method => :put ,:class => "buttonstatus2"%>
      <% else %>
      <a href="javascript:void(0);" onclick="jQuery('#visit_date').show()" class="buttonstatus">要去</a>
      <% end %>
      
      <% if @school.visited?(current_user) == 'visited' -%>
      <%= link_to "去过", novisited_school_url(@school), :method => :put ,:class => "buttonstatus2"%>
      <% else %>
      <a href="javascript:void(0);" onclick="jQuery('#visit_date').show()" class="buttonstatus">去过</a>
      <% end %>
      
      </div>
      <div id="what_time">
      <% form_for :visited, :url => visited_school_url(@school), :html => {:method => 'put'} do |f| -%>
      <div id="visit_date" style="display:none">
      <p>什么时间去的？</p>
      <input id="visited_visited_at" name="visited[visited_at]" type="text" value="<%= @visited.visited_at.to_date if @visited && @visited.visited_at %>" class="vDateField" />
      <p><%= submit_tag "确定" %></p>
      </div>
      <% end -%>
      </div>