<% content_for :fullsize do -%>
<div class="box">
  <div class="boxOuter">
    <div class="boxInner">
      <h3>学校列表(<%= @schools.size %>)</h3>
      <div class="contents">
        <table>
          <tr>
            <th>校名</th>
            <th>位置</th>
            <th>地址</th>
            <th>周边景点</th>
          </tr>
          <% @schools.each do |s| -%>
          <tr class="<%= cycle('odd', 'even') %>">
            <td><%= link_to s.title, school_url(s) %><% unless s.validated %>（未验证）<% end -%></td>
            <td><%= s.geo.parent.name if s.geo.parent %> <%= s.geo.name %> <%= s.county.name if s.county %></td>
            <td><%= s.basic.address if s.basic %></td>
            <td><%= s.traffic.sight if s.traffic %></td>
          </tr>
          <% end -%>
        </table>
      </div>
    </div>
  </div>
</div>
<% end -%>