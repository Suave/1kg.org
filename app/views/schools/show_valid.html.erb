<% @page_title = "#{@date}验证过的学校" %>



<% content_for(:sidebar) do %>
  <div class="box">
    <div class="boxOuter">
      <div class="boxInner">
        <h2>每月已认证的学校</h2>
        <div class="contents">
          <ul>
            <% School.archives.each do |month| %>
          		<li><a href="/schools/date/<%= "#{month[:year]}/#{"%02i" % month[:month]}" %>">
          			<%= month[:name] %>
          		</a>
          		<em>（<%= month[:delta] %>所学校）</em></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
<% end -%>

<div class="box">
  <div class="boxOuter">
    <div class="boxInner">
      <h2><%= @date %>新增学校</h2>
      <div class="contents">
        <table class="tableList">
          <tr>
            <th>校名</th>
            <th>提交者</th>
            <th>最后更新</th>
          </tr>
          <% @schools.each do |school| %>
            <tr class="<%= cycle('odd', 'even') %>">
              <td><%= link_to school.title, school_path(school.id) %></td>
              <td><%= link_to school.user.login, user_path(school.user.id) %></td>
              <td><%= school_last_update(school) %></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>