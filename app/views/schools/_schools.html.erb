<div class="box">
  <div class="boxOuter">
    <div class="boxInner">
      <h3><%= title %></h3>
      <div class="contents">
        <table>
          <tr>
            <th>学校</th>
            <th>去过</th>
            <th>分享</th>
            <th>最后更新</th>
          </tr>
          <% schools.each do |s| -%>
          <tr class="<%= cycle('odd', 'even') %> tipText">
            <td><%= link_to s.title, school_url(s) %></td>
            <td><%= s.visited.size %></td>
            <td><%= s.shares.size %></td>
            <td><%= school_last_update(s) %></td>
          </tr>
          <% end -%>
        </table>
        <%= customize_paginate schools %>
      </div>
    </div>
  </div>
</div>