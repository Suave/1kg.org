<% @page_title = @title = "标签：#{@tag}" %>

<% unless @schools.empty? %>
<div class="box">
  <div class="boxOuter">
    <div class="boxInner">
      <h3>需要<%= @tag %>的学校</h3>
      <div class="contents">
        <%= render :partial => '/schools/schools', :object => @schools %>
        <%= customize_paginate(@schools, :param_name => 'school_page') %>
      </div>
    </div>
  </div>
</div>
<% end %>

<% unless @shares.empty? %>
<div class="box">
  <div class="boxOuter">
    <div class="boxInner">
      <h3><%= @tag %>相关的分享</h3>
      <div class="contents">
        <%= render :partial => '/schools/shares', :object => @shares, :locals => {:with_head => true} %>
        <%= customize_paginate(@shares, :param_name => 'share_page') %>
      </div>
    </div>
  </div>
</div>
<% end %>