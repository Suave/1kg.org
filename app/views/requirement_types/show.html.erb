<% @page_title = @project.title %>

<% content_for :sidebar do -%>
<div class="box">
  <div class="boxOuter">
    <div class="boxInner">
      <h3>如何参与？</h3>
      <p class="postNew"></p>
      <div class="contents">
      </div>
    </div>
  </div>
</div>

      
  <% unless @other.nil?%>
  <div class="newbox">
      <h3>其他项目</h3>
      
        <%= render :partial => "/shared/project", :collection => @others %>
      
        <span class="remark">&raquo; <%= link_to "所有项目", requirement_types_url %></span>
  </div>
  <%end%>
<% end -%>

<div class="newbox">
      <div style="height:160px;width:160px;overflow:hidden;text-align:center;float:left">
            <%= link_to image_tag(@project.image(:thumb), :alt => @project.title,:style => "height:160px;width:160px;")%>
      </div>
      <div style="float:right;margin:4px 0 0"><%= link_to "立即申请",new_requirement_type_requirement_url(@project, :school_id => params[:school_id]),:class => "buttonjoin2"%></div>
      <div id="activitiesInfo">
        <span class="span_title"><%= @project.title %></span>
        <p><label>申请截至时间：</label><%= @project.apply_end_at.to_date %></p>
        <p><label>开始时间：</label><%= @project.start_at.to_date %></p>
        <p><label>结束时间：</label><%= @project.end_at.nil? ? '未要求' : @project.end_at.to_date %></p>
        <p><%=  "只有学校大使才可以申请" if @project.must%></p>
      </div>
</div>
<div class="cleanfix" style="height:10px;clear:both"></div>
<div class="newbox">
      <span class="span_title">项目介绍</span>
      <%= @project.description_html %>
</div>




<div class="cleanfix" style="height:3px;clear:both"></div>
<div class="newbox">
    <h3>参与的学校</h3>
    
    <p class="postNew"></p>
    <div class="contents">
      <%= render :partial => "requirements", :object => @project.requirements %>
      <div style="clear:both;"></div>
    </div>
</div>


<% if false%>
<%= render :partial => "/comments/comments", :object => @comments %>
<%= render :partial => "/comments/form", :locals => {:commentable => @project} %>
<% end%>