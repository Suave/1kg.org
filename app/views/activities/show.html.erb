<%if @photos%>

<% content_for :heads do -%>  
  <%= javascript_include_tag 'jquery.prettyPhoto' %>
  <%= stylesheet_link_tag 'prettyPhoto' %>
<% end %>

<script type="text/javascript" charset="utf-8">
  jQuery(document).ready(function(){
    jQuery("a[rel^='prettyPhoto']").prettyPhoto();
  });
</script>
<%end%>
<% @page_title = @title = @activity.title -%>

<% content_for :crumb do -%>
  <li>活动
    <ul>
      <li><%= @activity.title %></li>
    </ul>
  </li>
<% end -%>

<% content_for :sidebar do -%>
  <div class="newbox">
        <h3>
            &raquo;
            <% if @activity.join_closed? %>
              报名已结束            

            <% else -%>

              <% if @activity.joined?(current_user) -%>
                <%= link_to "我不去了", quit_activity_url(@activity), :method => :put %>
              <% else -%>
                <%= link_to "我要参加", join_activity_url(@activity) %>
              <% end -%>
            <% end -%>
        </h3>
  </div>

    <div class="newbox">
      <span class="span_title">参加活动的用户</span>
        <div class="cleanfix" style="height:10px"></div>
        <%= render :partial => "/shared/user_list", :locals => {:users => @activity.participators} %>
        <div class="cleanfix" style="height:20px"></div>
    </div>
  
  <div class="newbox">
      <span class="span_title">活动分享</span>
      <span class="postNew"><%= link_to image_tag("submit_share.png"),new_share_url + "?activity=#{@activity.id}" %></span>
      <div class="contents">
        <%= render :partial => "/shared/share", :collection => @shares %>
      </div>
      <div class="cleanfix" style="height:20px"></div>
  </div>
  
  <div class="newbox">
      <span class="span_title">活动相册</span>
      <span class="postNew"><%= link_to image_tag("upload_photo.png"),new_photo_url + "?activity=#{@activity.id}" %></span>
      <div class="contents clearfix" style="padding-top:16px;">
      <div class="clearfix">
      <%= render :partial => "/schools/gallery_photo", :collection => @photos%>
      </div>     
      </div>  
      <div class="cleanfix" style="height:20px"></div>
  </div>
<% end -%>

  <div class="newbox" id="activityInfo">
        <div class="contents">
          <div style="text-align:right">
            <%= link_to "邀请友邻", invite_activity_url(@activity) %> | <a href="#topicCommentsList">查看留言</a>
            <% if @activity.edited_by current_user -%>
              | <%= link_to "编辑", edit_activity_url(@activity.id) %>
              | <%= link_to "删除", activity_url(@activity.id), :confirm => "确定要删除这个活动?", :method => :delete %>
            <% end -%>
            
            <% if @activity.sticky_by? current_user -%>
              | <%= link_to (@activity.sticky? ? "取消置顶" : "置顶"), stick_activity_url(@activity), :method => :put %>
            <% end -%>
          </div>
          <div style="height:160px;width:160px;overflow:hidden;text-align:center;float:left">
            <%= link_to image_tag(@activity.main_photo.public_filename(:cube), :alt => '活动主题图'), @activity.main_photo.public_filename(:medium),:class => "activity_main" if @activity.main_photo%>
            <%= image_tag('activity.png', :alt => '活动主题图')  unless @activity.main_photo%>
          </div>   
          
          <div id="activitiesInfo">
            <p>发起人: <%= avatar_for @activity.user, 'small' %> <%= link_to @activity.user.login, user_url(@activity.user.id) %> 在 <%= @activity.created_at.to_date %></p>
            <p>类型: <%= @activity.category_name %></p>
            <p>开始日期: <%= @activity.start_at.to_date %>  结束日期：  <%= @activity.end_at.to_date %></td></p>
            <p>出发地: <%= link_to @activity.departure_id==0 ? "不限" : @activity.departure.name,"/geos/#{@activity.departure_id?? @activity.departure.id? : ''}" %> =>
              目的地: <%= link_to @activity.arrival_id==0 ? "不限" : @activity.arrival.name,"/geos/#{@activity.arrival_id?? @activity.arrival_id : ''}" %></p>
              <% if @activity.school%>
            <p>相关学校： <%= link_to @activity.school.title,school_url(@activity.school) %></p> 
              <%end%>
              <!--<p><%unless @activity.expense_per_head.blank? %>人均消费： <%= @activity.expense_per_head %> 元<%end%>
              <%unless @activity.expect_strength.blank? %>预期人数： <%= @activity.expect_strength %> 人<%end%></p>-->
          </div>
          <div class="clearfix" style="margin-bottom:10px;"></div>
          <span class="span_title">活动介绍</span>
          <div id="activityintro"><%= html_summary(@activity,0,400) %>
          <%= link_to "查看全部","#",:onclick => "$('#activityintro').hide();$('#activityintro_more').show();return false"  unless html_summary(@activity,400,401).nil?%>
          </div>
          <div id="activityintro_more" style="display:none">
            <%= @activity.clean_html%>
            <%= link_to "收起","#",:onclick => "$('#activityintro_more').hide();$('#activityintro').show();return false"%>
          </div>
        </div>
  </div>

  <%= render :partial => "/comments/comments", :object => @comments %>
  <%= render :partial => "/comments/form", :locals => {:commentable => @activity} %>