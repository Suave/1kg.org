<% @page_title = "活动" -%>
<% content_for :heads do -%>
  <%= javascript_include_tag 'jQuery/jquery.ui.core.min' %>
  <%= javascript_include_tag 'jQuery/jquery.ui.tabs.min' %>
  <style type="text/css">#participated .activity_list_meta{width:180px}</style>
<% end %>

<% content_for :sidebar do -%>
<div class="newbox">
  <span class="span_title">我参与的活动</span>
  <div class="cleanfix" style="clear:both;height:10px"></div>
  <% if current_user %>
  <div id="participated">
  <%= render :partial => "/shared/activity", :collection => @participated[0,4] %>
    <%= "<p>还没有参加过活动噢</p>" if @participated.size == 0%>
    <div class="remark"><%= link_to '查看更多',participated_activities_user_url(current_user),:target => "_blank" if @participated.size == 5%></div>
  </div>
  <%else%>
  请 <%= link_to "登录", login_path(:to => CGI.escape(request.request_uri)) %>  或 <%= link_to "注册", signup_path(:to => CGI.escape(request.request_uri)) %>
  <%end%>
</div>
    
<% @page = Page.find_by_slug('special') -%>
<%if @page%>
<div class="box">
  <div class="boxOuter">
    <div class="boxInner">
      <h3>专题活动</h3>
      <div class="contents">
      <%= render :text => @page.body %>
      </div>
    </div>
  </div>
</div>

<%end%>

<% end -%>

<div class="newbox">
      <div id="activity_tabs">
        <span class="span_title" style="margin-right:8px">最近的活动</span><span class="postNew"><%= link_for_new_activity %></span>
        <ul class="tab" >
          <% [["所有类别", "all"], ["公益旅行", "travel"],["支教", "teach"],["募捐","donation"],['网络活动','online'],['同城活动','city'],['其他','other']].each do |type| %>
            <li class="tabs_more"><%= link_to type[0], "##{type[1]}" %></li>
          <% end -%>
        </ul>
        <div class="cleanfix" style="clear:both;height:10px"></div>
        <div id = "all">
          <%= render :partial => "/shared/activity", :collection => @activities_hash[:all] %>
          <div class="remark"><%= link_to "&raquo; 查看更多",ongoing_activities_url,:target => "_blank" %></div>
        </div>
        
        <% [["公益旅行", "travel"],["支教", "teach"],["募捐","donation"],['网络活动','online'],['同城活动','city'],['其他','other']].each do |type| %>
        <div id ="<%= type[1]%>">
          <%= render :partial => "/shared/activity", :collection => @activities_hash[type[1].to_sym] %>
          <div class="remark"><%= link_to "&raquo; 查看更多",category_activities_url+"?c=#{type[1]}",:target => "_blank" if @activities_hash[type[1].to_sym].size == 8 %></div>
        </div>
        <% end -%>
      </div>
<script type="text/javascript">
  jQuery("#activity_tabs").tabs();
</script>
</div>

<div class="cleanfix" style="clear:both;height:20px"></div>           


<div class="newbox" id="activity_done">
      <span class="span_title">已往活动回顾</span> <span><%= link_to '查看更多',over_activities_url,:target => "_blank" %></span>
      <div class="clearfix" style="height:10px"> </div>
      <div class="contents">
          <%= render :partial => "/shared/activity", :collection => @activities_hash[:over],:locals => {:school => true} unless @activities_for_over.nil? %>
      </div>
      
      <div class="clearfix" style="height:10px;clear:both"> </div>
</div>


<div class="newbox">
      <span class="span_title">最新活动照片</span>
      <div class="cleanfix" style="clear:both;height:10px"></div>           
      <div class="contents clearfix">
        <%= render :partial => "/shared/photo", :collection => @photos %>
      </div>
</div>
<div class="cleanfix" style="clear:both;height:20px"></div>           