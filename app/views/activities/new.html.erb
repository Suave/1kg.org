<% content_for :crumb do -%>
<li>发布新活动</li>
<% end -%>

<% content_for :sidebar do -%>
<% end -%>

<% content_for :fullsize do -%>
  <div class="box" id="activitiesPostNew">
    <div class="boxOuter">
      <div class="boxInner">
        <h2>发布新活动</h2>
        <p class="caution">有问题，去<%= link_to "大家帮助大家小组", group_url(1), :target => "_blank" %>!</p>
        <% form_for :activity, :url => activities_url do |f| -%>

        <%= render :partial => "form", :object => f %>  
        
        <p class="submit clearfix"><span class="btnWrap"><%= submit_tag "发 布" %></span> <span class="btnWrap"><%= link_to "取 消", root_url %></span></span>带<span class="require">*</span>号的是必填项</p></p>
        <% end -%>
      </div>
    </div>
  </div>
<% end -%>