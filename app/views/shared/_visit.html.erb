<div style="clear:both;margin-bottom:1em;min-height:50px">
  <div style="float:left">
    <%= avatar_for(visit.user, "large") %>
  </div>
  <div style="margin-left:56px;">
    <p><%= link_to visit.user.login, user_url(visit.user) %> <% unless visit.visited_at.blank? %>在<%= l(visit.visited_at.to_date, :format => :short) %><%end%>去过<%= school unless school.blank?%><%= link_to h(visit.school.title), school_path(visit.school) unless school%></p>
    <div class="notes"><%= "“#{h visit.notes}“" unless visit.notes.blank?%></div>  
  </div>
</div>
