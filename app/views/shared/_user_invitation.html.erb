<% users.each do |c| -%>
<dl class="user">
  <dt><%= link_to avatar_for(c, "large"), user_url(c) %></dt>
  <dd><%= link_to c.login, user_url(c) %><br /> <%= check_box_tag "invite[#{c.id}]", c.id %></dd>
</dl>
<% end -%>
<p class="clear center"><a href="javascript:void(0);" onclick="CheckAll(true)">选择全部友邻</a> / <a href="javascript:void(0);" onclick="CheckAll(false)">取消选择</a> <%= submit_tag "发送邀请" %></p>