<div class="requirement">
    <div class="project_image_frame">
        <img class="project_image" src="<%= execution.project.image.url(:project_avatar) %>"/>
    </div>
    <div>
        <h5><%= link_to short_title(execution.project,10), project_execution_url(execution.project, execution) %></h5>
        <% if logged_in? && current_user == execution.user %>
          <span><%= link_to "填写反馈", new_share_url(:execution=>execution.id),:class => "adminbutton"%>
          </span>
        <% else %>
          <span><%= state_tag(execution.state)%></span>
        <% end -%>
    </div>
    <div style="clear:both"></div>
</div>
