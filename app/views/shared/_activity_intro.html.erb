<% activity = introable%>
  <h5> 相关活动 </h5> 
  <div class="box">  
    <%= link_to topic_photo_thumb(activity),:alt => '活动主题图',:class => "activity_main") %>
    <div style="margin-left:80px;margin-top:-8px">
      <p><b><%= link_to activity.title,activity%></b></p>
      <p class="explanation">
        发起人：<%= link_to activity.user.login, user_path(activity.user)%>
        <br/>
        <%= format_date activity.start_at %> 至 <%= format_date activity.end_at %>
        <br/>
        <% if activity.school%>
          <%= activity.geo.full_name%>
          <%= activity.school.name %>
        <% else %>
          <%= activity.geo.full_name%>
        <% end %>
      </p>
    </div>
  </div>

