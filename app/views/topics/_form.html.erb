<% form_for @topic do |form| -%>
  <p><label class="label">标题(必填)</label><%= form.text_field :title, :size => 20, :class => "formText" %>      <%= error_message_on @topic, :title %></p>
  <div><label class="label"><%= avatar_for current_user, "large" %></label>
    <p>
      <%= form.text_area :clean_html, :style => 'width:540px;height:360px;', :class => "mceEditor" %>
    </p>
  </div>
  <p style="margin-left:70px"><%= form.submit "发布" ,:class => "surebutton"%> <%= form.submit "取消" ,:class => "surebutton",:onclick =>"javascript:window.location='#{url_for @topic.boardable}';return false" %></p>
<% end -%>
