<% content_for :sidebar do -%>
  <%= render :partial => "setting_sidebar" %>
<% end -%>

<div class="box">
  <div class="boxOuter">
    <div class="boxInner">
      <h2>编辑个人信息</h2>
<div class="tabbedPanel">
  <%= render :partial => "setting_tabmenu" %>
  
  <div class="panel setting">
    <div class="block">
      <% form_for :profile, :url => user_path(:id => @user, :for => 'profile'), :html => {:method => 'put'} do |f| %>
        <%= render :partial => "profile_form", :object => f %>
        <h3>隐私设置</h3>
        <p><label>隐私设置</label><%= f.select :privacy, {"对所有人保密" => 0, "仅对好友公开" => 1} %></p>
        <p><label>&nbsp;</label><%= submit_tag "保 存" %></p>
      <% end -%>
    </div>
  </div>
</div>
    </div>
  </div>
</div>