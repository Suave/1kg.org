<div class="newbox">
      <div class="cleanfix" style="clear:both;height:10px"></div> 
      <span class="span_title" style="margin-right:8px"><%= h user.login %>的活动</span>
      <div  id="activity_tabs">
        <ul class="tab">
          <% [["参与的活动", "participated"], ["发起的活动", "launched"]].each do |type| %>
            <li><%= link_to type[0], "##{type[1]}" %></li>
          <% end -%>
        </ul>
        <div class="cleanfix" style="clear:both;height:5px"></div> 
        <div class="panel setting">
          <div id='participated'>
            <%= render :partial => "/shared/activity", :collection => @participated %>
            <p class="remark">
              &raquo; <%= link_to "#{user.login}参加的活动(#{user.participated_activities.count})", participated_activities_user_url(user) %>
            </p>
          </div>
          
          <div id='launched'>
            <%= render :partial => "/shared/activity", :collection => @submitted %>
            <p class="remark">
              &raquo; <%= link_to "#{h user.login}发起的活动(#{user.submitted_activities.count})", submitted_activities_user_url(user) %><br />
            </p>
          </div>
        </div>
      </div>
</div>