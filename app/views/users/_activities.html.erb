<div class="box">
  <div class="boxOuter">
    <div class="boxInner">
      <h3><%= h user.login %>的活动</h3>
      
      <div class="tabbedPanel" id="tabs">
        <ul class="tab">
          <% [["参与的活动", "participated"], ["发起的活动", "launched"]].each do |type| %>
            <li><%= link_to type[0], "##{type[1]}" %></li>
          <% end -%>
        </ul>
        
        <div class="panel setting">
          <div id='participated'>
            <table>
              <% @participated.each do |a| -%>
              <tr class="<%= cycle('odd', 'even') %>">
                <td><%= link_to a.title, activity_url(a) %></td>
              </tr>
              <% end -%>
            </table>
            <p class="remark">
              &raquo; <%= link_to "#{user.login}参加的活动(#{user.participated_activities.count})", participated_activities_user_url(user) %>
            </p>
          </div>
          
          <div id='launched'>
            <table>
              <% @submitted.each do |a| -%>
              <tr class="<%= cycle('odd', 'even') %>">
                <td><%= link_to a.title, activity_url(a) %></td>
              </tr>
              <% end -%>
            </table>
            <p class="remark">
              &raquo; <%= link_to "#{h user.login}发起的活动(#{user.submitted_activities.count})", submitted_activities_user_url(user) %><br />
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>