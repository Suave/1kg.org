<table>
  <tr>
    <th style="width:290px;">话题</th>
    <th style="width:150px;">小组</th>
    <th style="width:60px;">作者</th>
    <th style="width:40px;">回复</th>
    <th style="width:100px;">最后回复</th>
  </tr>
  <% group_topics.each do |t| -%>
  <tr>
    <td><%= link_to t.title, board_topic_url(t.board, t) %></td>
    <td><%= link_to_topic_group(t) %></td>
    <td><%= t.user.login %></td>
    <td><%= t.posts_count %></td>
    <td><%= link_to "#{ date_for_short t.last_replied_datetime} by #{t.last_replied_user.login}", board_topic_url(t.board, t, :anchor => (t.last_post.id if t.last_post)), :class => "link" %></td>
  </tr>
  <% end -%>
</table>