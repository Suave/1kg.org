<div class="box">
  <div class="boxOuter">
    <div class="boxInner">
      <h3><%= @user.login %>的话题</h3>
      
      <div class="tabbedPanel" id="topics_tabs">
        <ul class="tab">
          <% [["发起的话题", "submitted"], ["参与的话题", "participated"]].each do |type| %>
            <li><%= link_to type[0], "##{type[1]}" %></li>
          <% end -%>
        </ul>

        <div class="panel setting">
          <div id='submitted'>
            <%= render :partial => "/topics/topics", :object => submitted_topics %>
            <p class="remark">&raquo; <%= link_to "查看#{user.login}发起的所有话题", submitted_topics_user_url(user) %> (<%= user.topics.size %>)</p>
          </div>
          
          <div id="participated">
            <%= render :partial => "/topics/topics", :object => participated_topics %>
            <p class="remark">&raquo; <%= link_to "查看#{user.login}参与的所有话题", participated_topics_user_url(user) %> (<%= user.posts.size %>)</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    jQuery("#topics_tabs").tabs();
  });
</script>