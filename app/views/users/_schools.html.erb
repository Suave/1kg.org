<div class="box">
  <div class="boxOuter">
    <div class="boxInner">
      <h3><%= h user.login %>提交的学校</h3>
      <div class="contents">
      <table>
        <% schools.each do |s| -%>
        <tr class="<%= cycle('odd', 'even') %>">
          <td><%= link_to s.title, school_url(s) %></td>
        </tr>
        <% end -%>
      </table>
      </div>
      <p class="remark">
        &raquo; <%= link_to "#{user.login}提交的学校(#{user.submitted_schools.size})", submitted_schools_user_url(user) %><br />
      </p>
    </div>
  </div>
</div>