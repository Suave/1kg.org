<div class="newbox">
  <div class="cleanfix" style="clear:both;height:10px"></div>
  <span class="span_title"><%= h user.login %>的帖子</span>
        <div class="panel setting">
          <div id='shares'>
            <% if shares.blank? -%>
              <div class="contents">
                还没有帖子
              </div>
            <% else -%>
              <%= render :partial => "/shared/share", :collection => @shares %>
            <% end -%>
            <div class="cleanfix" style="clear:both;"></div> 
            <div class="remark"><%= link_to "&raquo; 查看全部", shares_user_url(user) %></div>
          </div>
        </div>

</div>
