<div class="newbox">
  <div class="cleanfix" style="clear:both;height:10px"></div>
  <span class="span_title"><%= h user.login %>的分享</span>
        <div class="panel setting">
          <div id='shares'>
            <% if shares.blank? -%>
              <div class="contents">
                <p>参加过<%= user.participated_activities.size %>个活动, 但还没有活动分享</p>
                <% if user == current_user -%>
                  <p>++ <%= link_to "写分享", new_share_url %></p>
                <% end -%>
              </div>
            <% else -%>
              <%= render :partial => "/shared/share", :collection => @shares %>
            <% end -%>
            <p class="remark">&raquo; <%= link_to "查看#{user.login}的全部分享", shares_user_url(user) %> (<%= user.shares.size %>)</p>
          </div>
        </div>

</div>
