<% @page_title = "#{@group.title} 小组讨论区" -%>

<% content_for :sidebar do -%>
  <h4>> <%= link_to "返回#{@group.title}小组", group_url(@group) %></h4>
<% end -%>



<h2 class="title"><%= @page_title %></h2>
<div class="moderators">
  版主：<%= User.moderators_of(@board).collect {|u| link_to(u.login, user_url(u.id))}.join(", ") %>
</div>

<div class="box">
  <div class="boxOuter">
    <div class="boxInner">
      <h3>全部话题</h3>
      <span class="postNew">++ <%= link_to "写新帖子", new_board_topic_url(@board) %></span>
      <div class="contents">
        <%= render :partial => "/topics/topics", :locals => {:board => @board, :topics => @topics} %>
        <%= customize_paginate @topics %>
      </div>
      
    </div>
  </div>
</div>