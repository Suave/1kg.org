<% @page_title = "所有站务&amp;专题讨论区" -%>

<% content_for :crumb do -%>
<li>站务&专题讨论区</li>
<% end -%>

<div class="box">
  <div class="boxOuter">
    <div class="boxInner">
      <h3>所有站务&专题讨论区</h3>
      <div class="contents">
        <table>
          <tr>
            <th>讨论区</th>
            <th>话题</th>
            <th>最新话题</th>
          </tr>
          <% @boards.each do |b| -%>
          <tr class="<%= cycle('odd', 'even') %>">
            <td><%= link_to b.talkable.title, board_url(b) %></td>
            <td><%= b.topics_count %></td>
            <td><%= link_to b.last_topic.title, board_topic_url(b.id, b.last_topic.id) if b.last_topic %></td>
          </tr>
          <% end -%>
        </table>
      </div>
    </div>
  </div>
</div>