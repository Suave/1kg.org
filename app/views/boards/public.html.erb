<% @page_title = "#{@public_board.title}" -%>

<% content_for :crumb do -%>
<li><%= link_to "站务&专题讨论区", public_issue_boards_url %></li>
<ul>
  <li><%= @public_board.title %></li>
</ul>
<% end -%>

<% content_for :sidebar do -%>
<% end -%>

<h2 class="title"><%= @public_board.title %></h2>
<div class="moderators">
  版主：<%= User.moderators_of(@public_board.board).collect {|u| link_to(u.login, user_url(u.id))}.join(", ") %>
</div>

<div class="posting">
  <div class="box">
    <div class="boxOuter">
      <div class="boxInner">
        <h3>讨论区介绍</h3>
        <div class="contents">
          <%= @public_board.description_html %>
        </div>
      </div>
    </div>
  </div>
  
  <div class="box">
    <div class="boxOuter">
      <div class="boxInner">
        <h3>所有话题</h3>
        <span class="postNew">++ <%= link_to "写新帖子", new_board_topic_url(@board) %></span>
        <div class="contents">
        <%= render :partial => "/topics/topics", :locals => {:board => @board, :topics => @topics} %>
        <%= customize_paginate @topics %>
        
        </div>
      </div>
    </div>
  </div>
  
</div>

