<% @page_title = @title = "#{@public_board.title}" -%>

<% content_for :crumb do -%>
  <li><%= @public_board.title %></li>
<% end -%>

<% content_for :sidebar do -%>
<div class="box">
  <div class="boxOuter">
    <div class="boxInner">
      <h3>小黑板</h3>
      <div class="contents">
        <%= @public_board.description_html %>
      </div>
    </div>
  </div>
</div>

<div class="box">
  <div class="boxOuter">
    <div class="boxInner">
      <h3>版主</h3>
      <%= render :partial => "/shared/user_list", :locals => {:users => User.moderators_of(@public_board.board)} %>
    </div>
  </div>
</div>

<% end -%>

<div class="posting">
  <div class="box">
    <div class="boxOuter">
      <div class="boxInner">
        <h3>所有话题</h3>
        <span class="postNew">++ <%= link_to "写新帖子", new_board_topic_url(@board) %></span>
        <div class="contents">
        <%= render :partial => "/topics/topics", :locals => {:board => @board, :topics => @topics} %>
        <%= customize_paginate @topics %>
        
        </div>
      </div>
    </div>
  </div>
  
</div>

