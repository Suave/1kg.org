<% @page_title = "#{@query} 搜索结果" -%>

<div class="box" id="cityList">
  <div class="boxOuter">
    <div class="boxInner">
      <h2>关于 <%= @query %> 的搜索结果</h2>
      <div class="contents">
        <ul class="clearfix">
          <%= @cities.collect {|c| "<li>#{link_to c.name, geo_url(c)}</li>"} %>
        </ul>
      </div>
      <p class="remark">&raquo; <%= link_to "重新搜索", schools_url %></p>
    </div>
  </div>
</div>