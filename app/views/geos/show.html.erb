<% @page_title = "我要去#{@city.name}"%>

<% content_for :crumb do -%>
  <li>目的地查询</li>
  <ul>
    <li><%= link_to "全国", geos_url %></li>
    <ul>
      <li><%= @city.name %></li>
    </ul>
  </ul>
<% end -%>

<% content_for :sidebar do -%>
  <% if @city.children.blank? -%>
    <%= render :partial => 'city_box' %>
  <% else %>
    <div id="geobox"><%= render :partial => 'geo_box', :locals => {:geos => @cities} %></div>
  <% end %>
  
  <%= render :partial => 'school_box' %>
<% end -%>

<h2 class="title"><%= @page_title %></h2>
<div class="box">
  <div class="boxOuter">
    <div class="boxInner">
      <h3><%= @city.name %>周边的学校</h3>
      <span class="postNew">++ <%= link_to "提交学校信息", new_school_url %></span>
      <div class="contents">
        <%= render :partial => 'school_maps' %>
      </div>
      <p class="remark tipText">&raquo; <%= link_to "#{@city.name}周边的全部学校", schools_geo_url(@city) %> (<%= School.get_near_schools_at(@city).count %>)</p>
    </div>
  </div>
</div>

<div class="box">
  <div class="boxOuter">
    <div class="boxInner">
      <h3><%= @city.name %>的活动分享</h3>
      <span class="postNew">++ <%= link_to "写活动分享", new_share_url %></span>
      <div class="contents">
        <%= render :partial => "/shares/shares", :object => @shares %>
        <%= customize_paginate @shares %>
      </div>
    </div>
  </div>
</div>