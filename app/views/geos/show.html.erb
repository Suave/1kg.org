<% @page_title = @title = @city.name %>

<% content_for :crumb do -%>
  <li>目的地查询</li>
  <ul>
    <li><%= link_to "全国", geos_url %></li>
    <ul>
      <li><%= @city.name %></li>
    </ul>
  </ul>
<% end -%>

<% content_for :subtitle do -%>
  <div class="subtitle">
  <%= link_to "去#{@city.name}同城", board_url(@city.city_board.board_id) %>
  </div>
<% end -%>

<% content_for :sidebar do -%>
  <%= render :partial => 'school_box' %>
  
  <% if @city.children.blank? -%>
    <%= render :partial => 'city_box' %>
  <% else %>
    <div id="geobox"><%= render :partial => 'geo_box', :locals => {:geos => @cities} %></div>
  <% end %>
  
  
<% end -%>

<div class="box">
  <div class="boxOuter">
    <div class="boxInner">
      <h3></h3>
      <div class="contents">
        <%= render :partial => 'school_maps' %>
      </div>
    </div>
  </div>
</div>

<div class="box">
  <div class="boxOuter">
    <div class="boxInner">
      <h3><%= @city.name %>的用户分享</h3>
      <span class="postNew"><%= link_for_new_share %></span>
      <div class="contents">
        <%= render :partial => "/shares/shares", :object => @shares %>
        <%= customize_paginate @shares %>
      </div>
    </div>
  </div>
</div>