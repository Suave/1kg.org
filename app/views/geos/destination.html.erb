<% @page_title = "我要去#{@city.name}"%>

<% content_for :crumb do -%>
  <li>目的地查询</li>
  <ul>
    <li><%= link_to "全国", all_geos_url %></li>
    <ul>
      <li><%= @city.name %></li>
    </ul>
  </ul>
<% end -%>

<% content_for :sidebar do -%>
  <div class="box">
    <div class="boxOuter">
      <div class="boxInner">
        <h3><%= @city.name %>的活动</h3>
        <span class="postNew">++ <%= link_to "发起新活动", new_activity_url %></span>
        <div class="contents">
          <table>
            <tr>
              <th>名字</th>
              <th>开始</th>
            </tr>
            <% @activities.each do |a| -%>
            <tr class="<%= cycle('odd', 'even') %> tipText">
              <td><%= link_to a.title, activity_url(a) %></td>
              <td><%= date_for_short(a.start_at) %></td>
            </tr>
            <% end -%>
          </table>          
        </div>
      </div>
    </div>
  </div>
  
  <div class="box">
    <div class="boxOuter">
      <div class="boxInner">
        <h3>有问题? 找朋友?</h3>
        <div class="contents">
          <% if @city.city_board -%>
          <p>&raquo; <%= link_to "去#{@city.name}同城看看", board_url(@city.city_board.board_id) %>, 那有 <%= @city.users.size %> 位用户, 没准可以帮你</p>
          <% end -%>
        </div>
      </div>
    </div>
  </div>
  
  
  
<% end -%>

<h2 class="title"><%= @page_title %></h2>
<div class="box">
  <div class="boxOuter">
    <div class="boxInner">
      <h3><%= @city.name %>周边的学校</h3>
      <span class="postNew">++ <%= link_to "提交学校信息", new_school_url %></span>
      <div class="contents">
        <table>
          <tr>
            <th>学校</th>
            <th>去过</th>
            <th>分享</th>
            <th>最后更新</th>
          </tr>
          <% @schools.each do |s| -%>
          <tr class="<%= cycle('odd', 'even') %> tipText">
            <td><%= link_to s.title, school_url(s) %></td>
            <td><%= s.visited.size %></td>
            <td><%= s.shares.size %></td>
            <td><%= school_last_update(s) %></td>
          </tr>
          <% end -%>
        </table>
      </div>
      <p class="remark tipText">&raquo; <%= link_to "#{@city.name}周边的全部学校", schools_geo_url(@city) %> (<%= School.at(@city).size %>)</p>
    </div>
  </div>
</div>

<div class="box">
  <div class="boxOuter">
    <div class="boxInner">
      <h3>关于<%= @city.name %>的活动分享</h3>
      <span class="postNew">++ <%= link_to "写活动分享", new_share_url %></span>
      <div class="contents">
        <% @shares.each do |s| -%>
        <div style="clear:both;margin-bottom:1em;min-height:50px">
          <div style="float:left">
            <%= avatar_for(s.user, "large") %>
          </div>
          <div style="margin-left:60px;">
            <div><%= link_to s.user.login, user_url(s.user) %> 写了 <%= link_to h(s.title), share_url(s) %></div>
            <div style="color:#999; text-align:right">
              <%= s.hits %> 浏览/<%= s.comments_count %> 回复
            </div>
          </div>
        </div>
        <% end -%>
      </div>
    </div>
  </div>
</div>