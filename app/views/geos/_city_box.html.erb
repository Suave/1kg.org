<div class="box">
  <div class="boxOuter">
    <div class="boxInner">
      <h3><%= @city.name %>的活动</h3>
      <div class="contents">
        <table>
          <tr>
            <th>名字</th>
            <th>开始</th>
          </tr>
          <% @activities.each do |a| -%>
          <tr class="<%= cycle('odd', 'even') %> tipText">
            <td><%= link_to a.title, activity_url(a) %></td>
            <td><%= date_for_short(a.start_at) %></td>
          </tr>
          <% end -%>
        </table>          
      </div>
    </div>
  </div>
</div>

<div class="box">
  <div class="boxOuter">
    <div class="boxInner">
      <h3>有问题? 找朋友?</h3>
      <div class="contents">
        <% if @city -%>
        <p>&raquo; <%= link_to "去#{@city.name}同城看看", geo_url(@city) %>, 那有 <%= @city.users.size %> 位用户, 没准可以帮你</p>
        <% end -%>
      </div>
    </div>
  </div>
</div>