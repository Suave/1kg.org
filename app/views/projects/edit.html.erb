
<% @page_title = @title = "编辑公益项目申请表" -%>



<% content_for :sidebar do -%>
<% @page = Page.find_by_slug('project-guide') -%>
  <%if @page%>
  <div class="newbox">
     <h3>公益项目说明</h3>
      <div class="clearfix" style="margin-bottom:10px"></div>
      <%= render :text => @page.body %>
  </div>
  <%end%>
<% end -%>


<div class="newbox" id="activitiesPostNew">
  <div class="clearfix" style="height:10px"></div>
  <% form_for :project, :url => project_path(@project), :html => {:multipart => true,:method => :put} do |f| -%>
    <%= render :partial => "form", :object => f %>
    <%= f.submit "确认" ,:class => "surebutton"%> <%= f.submit "返回" ,:class => "surebutton",:onclick =>"javascript:window.location='#{project_url(@project)}';return false" %>
  <% end -%>
</div>
