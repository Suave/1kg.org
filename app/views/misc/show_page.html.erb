<% @page_title = h @page.title -%>

<% content_for :crumb do -%>
<li><%= @page_title %></li>
<% end -%>

<% content_for :fullsize do -%>
<div class="box">
  <div class="boxOuter">
    <div class="boxInner">
      <h3><%= @page_title %></h3>
      <div class="contents">
        <%= @page.body %>
      </div>
    </div>
  </div>
</div>
<% end -%>