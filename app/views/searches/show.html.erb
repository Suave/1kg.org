<% @page_title = @title = "搜索" %>

<% content_for :sidebar do -%>
  <%= render :partial => '/shared/search_box' %>
  
<% end %>

<% unless @schools.empty? %>
<div class="box">
  <div class="boxOuter">
    <div class="boxInner">
      <h3><%= "包含 #{@keywords} 的学校" %></h3>
      <div class="contents">
        <%= render :partial => '/schools/schools', :object => @schools %>
        <%= customize_paginate(@schools) %>
      </div>
    </div>
  </div>
</div>
<% end %>

<% unless @groups.empty? %>
<div class="box">
  <div class="boxOuter">
    <div class="boxInner">
      <h3><%= "包含 #{@keywords} 的小组" %></h3>
      <div class="contents clearfix">
        <%= render :partial => '/groups/groups', :object => @groups %>
        <%= customize_paginate(@groups) %>
      </div>
    </div>
  </div>
</div>
<% end %>
