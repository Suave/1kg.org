<% @page_title = @title = "搜索" %>

<% content_for :heads do %>
  <%= javascript_include_tag "search" %>
<% end %>

<% content_for :sidebar do -%>
  <%= render :partial => '/searches/search_box' %>
<% end %>

<%= render :partial => 'schools' if @search.kind == 'school' %>
<%= render :partial => 'activities' if @search.kind == 'activity' %>
<%= render :partial => 'shares' if @search.kind == 'share' %>

<% if false %>
<% unless @groups.empty? %>
<div class="box">
  <div class="boxOuter">
    <div class="boxInner">
      <h3><%= "包含 #{@keywords} 的小组" %></h3>
      <div class="contents clearfix">
        <%= render :partial => '/groups/groups', :object => @groups %>
        <%= customize_paginate(@groups) %>
      </div>
    </div>
  </div>
</div>
<% end %>
<% end %>