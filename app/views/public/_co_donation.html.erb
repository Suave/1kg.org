<div class=<%= (defined? detail) ? "donantion_detail" : "activity_list"%>>
    <div class="project_image_frame">
        <%= link_to (image_tag (co_donation.image(:co_donation_avatar)),:class => "project_image"),co_donation%>
    </div>
    <div style="float:left;margin-left:10px;height:80px;<%= (defined? detail) ? 'width:196px' : 'width:176px'%>">
        <h6><%= link_to co_donation.title, co_donation %></h6>
        <% if co_donation.done%>
            <span>达成捐赠目标</span>
        <% elsif co_donation.end_at < Date.today %>
            <span>已结束</span>
        <% else %>
            <span>还需要 <%= co_donation.still_need%> 件</span>
        <% end %>
        <br/>
        <%= progressbar co_donation.matched_percent, :generate_css => true %><span><%= co_donation.number%>/<%= co_donation.goal_number%></span><br/>

    </div>
    <% if (defined? detail) %>
      <div class="project_info" style="clear:both;padding-top:4px">
        <h6><span class="gary_span">学校故事</span></h6>
        <%= summary(co_donation,68) %>...
      </div>
    <% end %>
</div>
