<div class="share">
  <div class="item-left">
    <%= image_tag(share.user.avatar.url,:alt => share.user.login) %>
  </div>
  <div style="item-right">
    <h6><%= link_to h(share.title), topic_url(share) %></h6>
    <small style="color:#999">
      by <%= link_to share.user.login, user_url(share.user) %>
      <%= share.votes.count %> 推荐/<%= share.comments_count %> 回复
       <% unless share.tags.blank?%> 标签:
        <% share.tags.each do |tag| %>
          <%= link_to h(tag.name), tag_path(:tag => tag.name) %>
        <% end %>
      <% end %>
    </small>
  </div>
</div>
