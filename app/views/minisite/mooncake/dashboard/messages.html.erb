<% @page_title = "爱心寄语 - 时光之秋公益月饼" %>

<% content_for :heads do -%>
<%= render :partial => "head" %>
<% end -%>

<div class="box" id="topicCommentsList">
  <div class="boxOuter">
    <div class="boxInner">
      <h3></h3>
      <ol class="clearfix">
        <% @stuffs.each do |s| -%>
        <li>
          <div class="avatar"><%= postcard_avatar_for s.user, "large" %></div>
          <div class="content">
            <p class="meta">
              <%= link_to s.user.login, user_url(s.user) %> 写于 <%= s.matched_at.to_date %>
            </p>
            <%= s.comment_html %>
          </div>
        </li>
        <% end -%>
        <%= customize_paginate @stuffs %>
      </ol>
    </div>
  </div>
</div>