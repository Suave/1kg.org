<table>
  <tr>
    <th style="width:71%">学校</th>
    <th style="width:14%">捐赠(册)</th>
    <th style="width:15%">捐助团体</th>
  </tr>
  <% bucks.each do |b| -%>
  <tr>
    <td>
      <div class="school_list_photo">
      <%= main_photo_thumb(b.school)%>
      </div>
      <div class="school_list_meta">
      <h4 style="font-size:14px;margin-bottom:10px"><%= link_to b.school.title, school_url(b.school), :target => "_blank" %></h4>
      <p><% if b.school.geo.parent %><%= link_to b.school.geo.parent.name.to_s,'/geos/'+b.school.geo.parent.id.to_s %> > <% end %><%= link_to b.school.geo.name.to_s,'/geos/'+b.school.geo.id.to_s %> <%= h b.school.basic.address %></p>
      <p>学校有
      <%unless b.school.basic.class_amount.blank?%><%= h b.school.basic.class_amount %>个班，<%end-%>
      <%unless b.school.basic.student_amount.blank?%><%= h b.school.basic.student_amount %>名学生<%end-%>。
      </p>
      
      </div>
    </td>
    <td><%= b.quantity %></td>
    <td><% if b.for_team? -%><span style="font-size:11px;"><%= b.for_team_tip %></span><% end -%></td>
  </tr>
  <% end -%>
</table>