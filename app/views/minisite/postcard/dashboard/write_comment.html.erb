<% content_for :heads do -%>
<link type="text/css" rel="stylesheet" href="/stylesheets/postcard.css" media="screen, projection" />
<% end -%>

<% @page_title = "公益贺卡" -%>

<% content_for :sidebar do -%>
  <%= render :partial => "book_list" %>
<% end -%>

<div class="box">
  <div class="boxOuter">
    <div class="boxInner">
      <h3>给<%= @stuff.school.title %>的孩子们写两句话吧</h3>
      <div class="contents">
        <% form_tag minisite_postcard_comment_url(:token => @stuff.code) do -%>
          <p><label></label><%= text_area_tag "comment", nil, :cols => 40, :rows => 5 %></p>
          <p><label>&nbsp;</label><%= submit_tag "写好了，保存" %></p>
        <% end -%>
      </div>
    </div>
  </div>
</div>