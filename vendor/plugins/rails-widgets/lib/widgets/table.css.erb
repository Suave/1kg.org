<style>
.<%=@name%>_table {
  margin: 10px;
  border-collapse: collapse;
}

.<%=@name%>_table td {
  text-align: left;
  vertical-align: top;
  padding: 5px;
  border: 1px solid #CCCCCC;
}

.<%=@name%>_table th {
  text-align: left;
  vertical-align: top;
  padding: 10px;
  border: 1px solid #CCCCCC;
  background-color: #DDDDDD;
  font-weight: bold;
}

.<%=@name%>_table td.blank {
   border: none;
}
</style>
